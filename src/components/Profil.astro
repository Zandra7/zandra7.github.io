---
import Icon from './icons/Icon.astro';
---

<header>
	<Icon name="profile-square" width={200} height={200} class="profile-square" />
	<h1 class="name">Sandra Elise Eng</h1>
	<p class="subtle title">Lærling i IT-utvikling</p>

	<p>
		<Icon name="world" width={16} height={16} class="location-icon" /> Oslo, Norge
	</p>
	<nav class="social-icons" aria-label="Sosiale lenker">
		<ul>
			<li>
				<a href="mailto:sandra.eng@live.no" title="Send meg en e-post"
					><Icon name="mail" width={24} height={24} class="mail" /></a
				>
			</li>
			<li>
				<a
					href="https://www.linkedin.com/in/sandra-elise-eng/"
					target="_blank"
					title="Besøk min LinkedIn-profil"
					><Icon name="linkedin" width={24} height={24} class="linkedin" /></a
				>
			</li>
			<li>
				<a
					href="https://github.com/Zandra7"
					target="_blank"
					title="Se mine prosjekter på GitHub"
					><Icon name="github" width={24} height={24} class="github" /></a
				>
			</li>
		</ul>
	</nav>
</header>

<style>
	h1 {
		margin-bottom: 0;
	}

	.title {
		margin-top: 0.25rem;
		margin-bottom: 1.5rem;
	}

	.social-icons ul {
		list-style: none;
		margin: 0;
		padding: 0;
		display: flex;
		justify-content: left;
		gap: 0.75rem;
	}

	.social-icons a {
		transition: all 0.3s ease;
	}

	.social-icons a:hover {
		transform: translateY(-3px) scale(1.1);
		filter: brightness(1.2);
	}
</style>
