---
export const utdanning = [
	{
		periode: 'sep. 2020 - mar. 2021',
		skole: 'Fyrstikkalleen videregående skole',
		program: 'Informasjonsteknologi og medieproduksjon',
		detaljer: ['Poengsum: 54', 'Fravær: 3 timer'],
	},
	{
		periode: 'aug. 2019 - juni. 2022',
		skole: 'Skøyenåsen ungdomsskole',
		program: 'Ungdomsskole',
		detaljer: ['Poengsum: 50', 'Fravær: 1 time'],
	},
];
---

<div class="utdanning-container">
	<h2>Utdanning</h2>
	<div class="timeline">
		{
			utdanning.map((skole, index) => (
				<div class="utdanning-item">
					<div class="timeline-left">
						<p class="periode">{skole.periode}</p>
					</div>
					<div class="timeline-center">
						<div class="timeline-dot" />
						<div class="timeline-line-bottom" />
					</div>
					<div class="timeline-right">
						<p class="periode">{skole.periode}</p>
						<h3>{skole.skole}</h3>
						<p class="program subtle">{skole.program}</p>
						<ul class="detaljer">
							{skole.detaljer.map((detalj) => (
								<li>{detalj}</li>
							))}
						</ul>
					</div>
				</div>
			))
		}
	</div>
</div>

<style>
	.utdanning-item {
		display: grid;
		grid-template-columns: 150px 30px 1fr;
		gap: 1rem;
		margin-bottom: 3rem;
	}

	.periode {
		text-align: right;
		margin: 0;
	}

	.timeline-right {
		background-color: rgba(222, 98, 98, 0.05);
		border-radius: 10px;
		padding: 1rem;
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.timeline-right .periode {
		display: none;
	}

	.timeline-center {
		display: flex;
		flex-direction: column;
		align-items: center;
		position: relative;
	}

	.timeline-dot {
		width: 8px;
		height: 8px;
		background-color: #de6262;
		border-radius: 50%;
		margin: 0.5rem 0 0.5rem 0;
	}

	.timeline-line-bottom {
		width: 2px;
		background-color: #de6262;
		flex-grow: 1;
		margin-top: 0.5rem;
		margin-bottom: -2.5rem;
	}

	h2 {
		margin-bottom: 2rem;
	}

	h3 {
		margin: 0;
	}

	.program {
		margin: 0;
	}

	.detaljer {
		margin: 0;
	}

	.detaljer li {
		margin-bottom: 0.25rem;
	}

	@media (max-width: 1100px) {
		.utdanning-item {
			grid-template-columns: 30px 1fr;
			gap: 1rem;
		}

		.timeline-left {
			display: none;
		}

		.timeline-right {
			display: flex;
			flex-direction: column;
		}

		.timeline-right .periode {
			display: block;
			order: -1;
			text-align: left;
			margin-bottom: 0.5rem;
			color: #de6262;
		}
	}
</style>
