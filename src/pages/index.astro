---
import Sidebar from '../components/Sidebar.astro';
import Layout from '../layouts/Layout.astro';
import Erfaring from '../components/Erfaring.astro';
import Utdanning from '../components/Utdanning.astro';
import Prosjekter from '../components/Prosjekter.astro';
import { jobber } from '../data/erfaring';
import { utdanning } from '../data/utdanning';
import { prosjekter } from '../data/prosjekter';
import Teknologier from '../components/Teknologier.astro';

const ANTALL_SYNLIGE_JOBBER = 2;
const ANTALL_SYNLIG_UTDANNING = 1;
const ANTALL_SYNLIGE_PROSJEKTER = 2;
---

<Layout>
	<div class="container">
		<aside class="sidebar">
			<Sidebar />
		</aside>
		<main class="content">
			<Erfaring jobber={jobber} antallSynlige={ANTALL_SYNLIGE_JOBBER} />
			<Prosjekter
				prosjekter={prosjekter}
				antallSynlige={ANTALL_SYNLIGE_PROSJEKTER}
			/>
			<Utdanning
				utdanning={utdanning}
				antallSynlige={ANTALL_SYNLIG_UTDANNING}
			/>
			<Teknologier />
		</main>
	</div>
</Layout>

<style>
	.container {
		display: grid;
		grid-template-columns: 350px 1fr;
		grid-template-areas: 'sidebar content';
		max-width: 1200px;
		margin: 0 auto;
		min-height: 100vh;
		gap: 3rem;
		padding-top: 3rem;
	}

	.sidebar {
		grid-area: sidebar;
		box-sizing: border-box;
		height: 100vh;
		position: fixed;
		top: 0;
		width: 350px;
		padding: 3rem 2rem;
		overflow-y: auto;
	}

	.content {
		grid-area: content;
		box-sizing: border-box;
		padding: 2rem;
		display: flex;
		flex-direction: column;
		gap: 5rem;
	}

	@media (max-width: 900px) {
		.container {
			grid-template-columns: 1fr;
			grid-template-areas:
				'sidebar'
				'content';
			padding-top: 1rem;
			gap: 1rem;
		}

		.sidebar {
			position: static;
			height: auto;
			width: 100%;
			padding: 1rem 3rem;
		}

		.content {
			padding: 1rem 3rem;
		}
	}

	@media (min-width: 769px) {
		.sidebar {
			left: max(2rem, calc(50% - 600px));
		}
	}

	@media (min-width: 769px) and (max-width: 1240px) {
		.sidebar {
			left: 2rem;
		}
	}
</style>
